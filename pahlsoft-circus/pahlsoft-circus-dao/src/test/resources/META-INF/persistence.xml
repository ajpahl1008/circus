<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="PersistenceUnitTest">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>com.pahlsoft.circus.dao.AttendeeEntity</class>
        <class>com.pahlsoft.circus.dao.InterestsEntity</class>
        <class>com.pahlsoft.circus.dao.RelationshipsInterestsEntity</class>
        <class>com.pahlsoft.circus.dao.RelationshipsSkillsEntity</class>
        <class>com.pahlsoft.circus.dao.SkillsEntity</class>
        <class>com.pahlsoft.circus.dao.VendorEntity</class>
        <class>com.pahlsoft.circus.dao.AttendeeInterestsEntity</class>
        <class>com.pahlsoft.circus.dao.AttendeeSkillsEntity</class>
        <properties>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
            <property name="openjpa.ConnectionURL" value="jdbc:derby:memory:circus;create=true"/>
            <property name="openjpa.ConnectionDriverName" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="openjpa.Log" value="DefaultLevel=ERROR, Tool=ERROR"/>
        </properties>
    </persistence-unit>
</persistence>
